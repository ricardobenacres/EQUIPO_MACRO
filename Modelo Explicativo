library(tidyverse)
library(lubridate)
library(readxl)
# Datos desde ene 2002 hasta feb 2021

View(PrimerosMes)
TYOPEC   <- read_excel("Downloads/TYOPEC.xlsx")                    # Tasa y producción de la opec
EFERUSA  <- read_excel("Documents/MACROECONOMETRÍA/EFERUSA.xls")   # Effective exch rate (USA_multilateral)
IPI      <- read_excel("Documents/MACROECONOMETRÍA/IPIUS.xls").    # Índice de producción industrial total USA
TASALP   <- read_excel("Documents/MACROECONOMETRÍA/TASALP.xls").   # 10-year bond yield USA
PMENS    <- log(PrimerosMes$PMENS[-c(1, 232)])                     # Precios promedios mensuales del WTI
VMENS    <- log(PrimerosMes$VMENS[-c(1, 232)])                     # Volumen promedio mensual
USDMULTI <- log(EFERUSA$BROADEFER)                                 # USA multilateral effective exchange rate index 
IPI      <- log(IPI$IPI)                                           
OPECMEN  <- log(TYOPEC$OPECMEN).              
TASALP   <- log(1+TASALP/100)
Fechas   <- PrimerosMes$fecha[-c(232, 231)]
DATA <- cbind.data.frame(Fechas, OPECMEN, PMENS, VMENS, USDMULTI, IPI, TASALP)
View(DATA)
write.csv(DATA, "DATOSPMENS")

